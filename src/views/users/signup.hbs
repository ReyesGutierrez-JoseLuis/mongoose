<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
       <img class="rounded-circle mx-auto d-block logo m-4" src="/img/295128.png" alt="Logo" style="width: 80%;">
       
      <div class="card-header">
         <h1 class="h4">
          <center>Registro</center>
        </h1>
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirma tu Password" value="{{confirm_password}}">
          </div>
          <button class="btn btn-primary btn-block">
            Registrarme
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
